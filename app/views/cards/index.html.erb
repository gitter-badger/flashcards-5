 <table>
  <thead>
    <h1>Все карточки</h1>
    <tr>
      <th>Original Text</th>
      <th>Translated Text</th>
      <th>Review Date</th>
    </tr>
  </thead>
  <% @cards.each do |card| %>
  <tbody>
    <tr>
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= card.review_date.strftime("%d/%m/%Y") %></td>      
      <td><%= link_to 'Show', card_path(card) %></td> 
      <td><%= link_to 'Edit', edit_card_path(card) %></td>
      <td><%= link_to 'Destroy', card_path(card), 
              method: :delete, 
              data: { confirm: 'Are you sure?'} %></td>
    </tr>
  </tbody>
  <% end %>
  <th><%= link_to "Back", root_path %></th>
 </table>